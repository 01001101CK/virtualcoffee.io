<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ title or metadata.title }}</title>
    <meta name="description" content="{{ description or metadata.description }}">
    <link rel="stylesheet" href="{{ '/assets/css/main.css' | url }}"/>
    <noscript><link rel="stylesheet" href="{{ '/assets/css/noscript.css' | url }}"/></noscript>
    <link rel="stylesheet" href="{{ '/css/prism-base16-monokai.dark.css' | url }}">
    <link rel="alternate" href="{{ metadata.feed.path | url }}" type="application/atom+xml" title="{{ metadata.title }}">
    <link rel="alternate" href="{{ metadata.jsonfeed.path | url }}" type="application/json" title="{{ metadata.title }}">
  </head>
  <body class="is-preload">

    <div id="wrapper">
      {#- nav example from 11ty template:
          Read more about `eleventy-navigation` at https://www.11ty.dev/docs/plugins/navigation/
          <ul class="nav">
            {%- for entry in collections.all | eleventyNavigation %}
              <li class="nav-item{% if entry.url == page.url %} nav-item-active{% endif %}">
                <a href="{{ entry.url | url }}">{{ entry.title }}</a>
              </li>
            {%- endfor %}
          </ul>
          #}

      <section id="main"{% if templateClass %} class="{{ templateClass }}"{% endif %}>
        {{ content | safe }}
      </section>

      <footer id="footer">
        <ul class="copyright">
          <li>&copy; Virtual Coffee</li>
          <li>
            <a href="mailto:hello@virtualcoffee.io">Contact Us</a>
          </li>
        </ul>
        <div>
          <a href="https://www.netlify.com">This site is powered by Netlify</a>
        </div>
      </footer>
    </div>

    <script>
      if ('addEventListener' in window) {
        window.addEventListener('load', function () {
          document.body.className = document
            .body
            .className
            .replace(/\bis-preload\b/, '');
        });
        document.body.className += (
          navigator.userAgent.match(/(MSIE|rv:11\.0)/)
          ? ' is-ie'
          : '');
      }
    </script>

    <!-- Current page: {{ page.url | url }} -->
  </body>
</html>